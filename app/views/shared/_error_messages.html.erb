<% if @user.errors.any? %>
	<div id="error-explination">
		<div class="alert alert-error">
			The form contains <%= pluralize((@user.errors.count - 1) , "error") %>
		</div>
		<ul>
			<% i = 0 %>
			<% @user.errors.full_messages.each do |msg| %>
			<% i = i + 1 %>
			<% if (i > 1)  %>
				<li>* <%=  msg  %></li>
			<% end %>
			<% end %>
		</ul>
	</div>
<% end %>